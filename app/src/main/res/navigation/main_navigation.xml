<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/nav_home">
    <fragment
        android:id="@+id/nav_home"
        android:name="com.submission.githubuser.fragments.HomeFragment"
        android:label="@string/homepage_header"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_userDetailActivity"
            app:destination="@id/userDetailActivity" />
    </fragment>
    <activity
        android:id="@+id/userDetailActivity"
        android:name="com.submission.githubuser.activities.UserDetailActivity"
        android:label="activity_user_detail"
        tools:layout="@layout/activity_user_detail" >
    </activity>
    <fragment
        android:id="@+id/followerFragment"
        android:name="com.submission.githubuser.fragments.FollowFragment"
        android:label="fragment_follower"
        tools:layout="@layout/fragment_follow" >
        <action
            android:id="@+id/action_followerFragment_to_userDetailActivity"
            app:destination="@id/userDetailActivity" />
    </fragment>
    <fragment
        android:id="@+id/nav_favourites"
        android:name="com.submission.githubuser.fragments.FavouriteFragment"
        android:label="@string/favourites"
        tools:layout="@layout/fragment_favourite" >
        <action
            android:id="@+id/action_favouriteFragment_to_userDetailActivity"
            app:destination="@id/userDetailActivity" />
    </fragment>
</navigation>