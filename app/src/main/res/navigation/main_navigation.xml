<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/homeFragment">
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.submission.githubuser.fragments.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_userDetailActivity"
            app:destination="@id/userDetailActivity" />
    </fragment>
    <activity
        android:id="@+id/userDetailActivity"
        android:name="com.submission.githubuser.activities.UserDetailActivity"
        android:label="activity_user_detail"
        tools:layout="@layout/activity_user_detail" >
    </activity>
    <fragment
        android:id="@+id/followerFragment"
        android:name="com.submission.githubuser.fragments.FollowFragment"
        android:label="fragment_follower"
        tools:layout="@layout/fragment_follow" >
        <action
            android:id="@+id/action_followerFragment_to_userDetailActivity"
            app:destination="@id/userDetailActivity" />
    </fragment>
</navigation>