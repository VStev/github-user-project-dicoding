<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.submission.githubuser">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <permission android:name="com.submission.githubuser.READ_DATABASE" android:protectionLevel="normal"/>
    <permission android:name="com.submission.githubuser.WRITE_DATABASE" android:protectionLevel="normal"/>

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GitHubUser">
        <receiver
            android:name=".alarmmanagers.AppAlarmManager"
            android:enabled="true"
            android:exported="true" />
        <activity
            android:name=".activities.SplashScreenActivity"
            android:theme="@style/noActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.SearchResultActivity" />
        <activity android:name=".activities.UserDetailActivity" />
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
            <nav-graph android:value="@navigation/main_navigation" />
        </activity>
        <provider
            android:name=".databaseapi.DatabaseContentProvider"
            android:authorities="com.submission.githubuser"
            android:exported="true"
            android:readPermission="com.submission.githubuser.READ_DATABASE"
            android:writePermission="com.submission.githubuser.WRITE_DATABASE"/>

    </application>

</manifest>